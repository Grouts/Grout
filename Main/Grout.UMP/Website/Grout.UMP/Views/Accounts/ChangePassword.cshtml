<!DOCTYPE html>
<html>
<head>
   @Styles.Render("~/styles/forgot-password")
    <title>@GlobalAppSettings.SystemSettings.OrganizationName - Change Password</title>
    <link rel="icon" href="~/Content/Images/Application/@GlobalAppSettings.SystemSettings.FavIcon" onerror="if (this.href != '~/Content/Images/Application/Grout_Favicon.png') this.href = '~/Content/Images/Application/Grout_Favicon.png';" />
</head>
<body>
    <div class="content">
        <div id="image_container" class="col-lg-12 col-md-12 col-sm-12 col-lg-12 no-padding section-center-alignment">
            <img src="~/Content/Images/Application/@GlobalAppSettings.SystemSettings.LoginLogo" onerror="if (this.src != '/Content/Images/Application/Grout_Login_Logo.png') this.src = '/Content/Images/Application/Grout_Login_Logo.png';" />
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-lg-12 forgot-password-title"><h3>Create new password</h3></div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-lg-12 form-area">
            <form action="/accounts/updatepassword" method="post" onsubmit="return changePasswordValidation();" id="update-password-form">
                <input type="hidden" value="@Request["userid"]" name="userid" />
                <input type="hidden" value="@Request["recoverycode"]" name="recoverycode" />
                <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12 password-form-holder">
                    <div>
                        <input placeholder="New password" type="password" id="password" name="password" autofocus="" class="form-control change-password-form" />
                        <div class="show-hide-password"></div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12 password-form-holder">
                    <div>
                        <input placeholder="Confirm password" type="password" id="re-password" name="re-password" autofocus="" class="form-control change-password-form" />
                        <div class="show-hide-password"></div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12 validation-holder">
                    <span id="validation_error" class="validation-messages">@TempData["Message"]</span>
                </div>
                <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12 submit-btn">
                    <input type="submit" class="btn btn-info" value="Update" />
                </div>
            </form>
        </div>
    </div>


    <div id="base_footer_Div">
        <hr class="bottom-hr-line" />
        <footer>

            <p class="pull-left">Powered by <img width="100" height="25" src="~/Content/Images/Application/Grout_Footer_Logo.png" alt="Grout" /> | Copyright &copy; 2001 - @DateTime.Now.Year Grout Inc | All Rights Reserved</p>
            @*<p class="pull-right"><a href="javascript:void(0);">Documentation</a>| <a href="javascript:void(0);">Sales</a> |<a href="javascript:void(0);">Support</a></p>*@
        </footer>
    </div>

    @Scripts.Render("~/scripts/forgot-password")
</body>
</html>
