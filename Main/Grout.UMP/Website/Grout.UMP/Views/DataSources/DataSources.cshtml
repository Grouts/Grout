@{
    ViewBag.Title = GlobalAppSettings.SystemSettings.OrganizationName + " - Data Sources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ItemDetail>

@section styles{
    @Styles.Render("~/styles/items")
}

@section scripts{
    @Scripts.Render("~/scripts/datasource-page")
}

<div id="verionWindowContainer" class="no-padding"><iframe width="100%" height="100%" style="height:100%"></iframe></div>

<div id="itemGridContainer" data-grid-name="datasources">
    <div id="searchArea">
        <input type="text" id="searchItems" placeholder="Search data sources"/>
        <span class="su su-search search-item" title="Search data sources"></span>
    </div>
    <div class="heading">
        DATA SOURCES
    </div>
    @Html.Partial("../Items/_ItemsGrid", new ViewDataDictionary { { "gridName", "datasources" } })
</div>
<div id="datasource_edit_popup">
    <iframe id="datasource_edit_popup_iframe" class="datasource-popup-frame"></iframe>
</div>
@Html.Partial("../Items/_AddItems")
