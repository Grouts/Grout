<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/styles/AddGroup")

    @Scripts.Render("~/scripts/iframe", "~/scripts/AddGroup")

    <script>
        $(document).ready(function () {
            parent.$("#NewGroupArea_wrapper").ejWaitingPopup("hide");
            $(document).on("click", ".closeDialog", function (e) {
                eDialog = parent.$("#NewGroupArea").data("ejDialog");
                eDialog.close();
                parent.$("#NewGroupArea iframe").attr("src", "");
            });
        });
    </script>

</head>
<body class="white-bg">
    <form class="col-lg-12 no-padding group_form" id="PopupContainer" autocomplete="off">
        <div class="col-md-12 header-menu">
            <div class="col-xs-6 no-padding">
                <span class="su su-group-1 Head-icon"></span>
                <span class="PopupTitle">Add Group</span>
            </div>
            <div class="col-xs-6 no-padding">
                <a href="javascript:void(0);" class="PopupClose closeDialog" title="Close"><span class="su su-close"></span></a>
                <div id="folder-setting-arrow" class="downArrow" style="left: 37px;"></div>
            </div>
        </div>
        
        <div class="dialogBody col-xs-12 no-padding">
            <div class="col-xs-12 no-left-padding padding15 no-bottom-padding no-right-padding">
                <div class="col-xs-4">Name<span class="Mandatory">*</span></div>
                <div class="col-xs-8 no-left-padding" id="group_name">
                    <input type="text" id="GroupName" class="form-control has-error UsermgmtInputtext" placeholder="Group name" name="groupname" tabindex="1" autofocus>
                    <span id="invalid_Groupname" class="ErrorMessage no-padding" title="Please enter group name" data-content="" style="display:block; height:28px;"></span>
                </div>
            </div>
            <div class="col-xs-12 no-left-padding no-right-padding">
                <div class="col-xs-4">Description</div>
                <div class="col-xs-8 no-left-padding">
                    <textarea class="form-control has-error UsermgmtInputtext" maxlength="1024" id="GroupDescription"></textarea>
                    <div>
                        *1024 characters maximum
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 dialogFooter rightAlign no-right-padding no-left-padding fixed-footer">
            <div class="col-xs-7">               
                <div class="col-md-12 SuccessMessage no-padding"></div>
            </div>
            <div class="col-xs-5 no-padding rightAlign">
                <input type="button" id="AddGroup" class="btn btn-primary rightAlign" value="Add" />
                <input type="button" id="CancelGroup" class="btn btn-link rightAlign closeDialog" value="Cancel" />
            </div>
        </div>
    </form>
</body>
</html>