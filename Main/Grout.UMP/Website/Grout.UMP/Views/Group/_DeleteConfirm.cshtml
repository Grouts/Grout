<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/styles/DeleteConfirm")

    @Scripts.Render("~/scripts/DeleteConfirm")

    <script>
        $(document).ready(function () {
            parent.$("#DeleteGroupArea_wrapper").ejWaitingPopup("hide");
            $(document).on("click", ".PopupClose", function (e) {
                eDialog = parent.$("#DeleteGroupArea").data("ejDialog");
                eDialog.close();
                parent.$("#DeleteGroupArea iframe").attr("src", "");
            });
        });
    </script>

</head>
<div class="col-lg-12 no-padding" id="PopupContainer">
    <div class="col-md-12 header-menu" style="height:69px">
        <span class="su su-delete Head-icon"></span>
        <span class="PopupTitle">Delete Group - @Request["name"]</span>
        <a href="javascript:void(0);" class="PopupClose group-popup-close"><span class="su su-close"></span></a>
    </div>
    <div class="col-md-12 ErrorMessage no-padding">@TempData["ErrorMessage"]</div>
    <div class="col-md-12 SuccessMessage no-padding"></div>
    <div class="dialogBody col-xs-12 no-padding">
        <div class="col-xs-12 no-left-padding no-bottom-padding no-right-padding">
            <div class="deleteMsg">Are you sure you want to delete the group?</div>
        </div>
        <div class="col-xs-12 dialogFooter rightAlign no-right-padding no-left-padding">
            <div class="col-xs-4"><input type="hidden" id="hiddenId" value="@ViewBag.id" /></div>
            <div class="col-xs-8 no-padding rightAlign">
                <input type="button" id="DeleteGroup" class="btn btn-danger rightAlign" value="Yes" />
                <input type="button" id="CancelGroup" class="btn btn-link rightAlign PopupClose" value="No" />
            </div>
        </div>
    </div>
</div>
</html>