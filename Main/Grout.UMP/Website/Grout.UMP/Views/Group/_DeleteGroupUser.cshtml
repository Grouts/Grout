<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/styles/EditDelete")
    @Scripts.Render("~/scripts/DeleteGroupUser")

</head>
<div class="col-lg-12 no-padding" id="PopupContainer">
    <div class="col-md-12 header-menu">
        <div class="col-xs-6 no-padding">
            <span class="su su-delete Head-icon"></span>
            <span class="PopupTitle">Delete User</span>
        </div>
        <div class="col-xs-6 no-padding">
            <a href="javascript:void(0);" class="PopupClose"><span class="su su-close"></span></a>
            <div id="folder-setting-arrow" class="downArrow" style="left: 37px;"></div>
        </div>
    </div>
    <div class="col-md-12 ErrorMessage no-padding">@TempData["ErrorMessage"]</div>
    <div class="col-md-12 SuccessMessage no-padding"></div>
    <div class="dialogBody col-xs-12 no-padding">
        <div class="col-xs-12 no-left-padding padding20 no-bottom-padding no-right-padding">
            <div class="deleteMsg">Are you sure you want to delete this user from the group?</div>
        </div>
        <div class="col-xs-12 dialogFooter rightAlign no-right-padding no-left-padding">
            <div class="col-xs-4">
                <input type="hidden" id="hiddenId" value="@ViewBag.id" />
                <input type="hidden" id="hiddenName" value="@ViewBag.name" />
                <input type="hidden" id="hiddengroupId" value="@ViewBag.groupId" />
            </div>
            <div class="col-xs-8 no-padding rightAlign">
                <input type="button" id="DeleteUser" class="btn btn-danger rightAlign" value="Yes" tabindex="1" autofocus />
                <input type="button" id="CancelGroup" class="btn btn-link rightAlign PopupClose" value="No" tabindex="2"/>
            </div>
        </div>
    </div>
</html>