<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        Add New Report
    </title>
    @Scripts.Render("~/scripts/add-report")
    @Styles.Render("~/styles/add-report")
   
</head>
<body style="background-color:white">

    <div id="createReportPopupHolder">
        <input type="hidden" name="selectedFolderId" id="selectedFolderId" value="" />
        <input type="hidden" id="publishedFileName" value="none">
        <input type="hidden" id="rdl_filename" value="Choose file">
        <div class="col-md-12 header-menu">
            <span class="su su-report Head-icon"></span>
            <span class="PopupTitle">Add Report</span>
            <a href="javascript:void(0);" class="PopupClose" title="Close" onclick="closeNewRDLAddPopup()"><span class="su su-close"></span></a>
        </div>
        <form id='new_rdl_tab_content' class='col-md-12 no-top-margin add-report-form' autocomplete="off">
            <div class='col-md-12  new-rdl-content-holder' id='new_rdl_content_holder'>
                <table cellspacing='10' cellpadding='0' border='0' width='100%'>
                    <tr>
                        <td width='20%'>
                            <div class="bottom-margin30">Select category<span class="Mandatory">*</span></div>
                        </td>
                        <td width='80%'>
                            <div class="bottom-margin30">
                                <select id="selected_category" data-live-search="true" title='Select category' name="categoryId" class="selectpicker form-control bottom-margin30" title="Select category" data-size="5" style="width:100%;margin-bottom:15px;">
                                    @for (var item = 0; item < Model.Count; item++)
                                    {
                                        <option value="@Model[item].Id">@Model[item].Name</option>
                                    }
                                </select>
                                <span id="CategoryMessage" class="ErrorMessage hide">Please select category</span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td width='20%'><div class="bottom-margin30">Name<span class="Mandatory">*</span></div></td>
                        <td width='80%' style="height:59px;vertical-align:top;">
                            <input type='text' autofocus="" class='form-control' name='file_name' id='file_name' maxlength="100" />
                            <span id='report_name_validation_error' class='validation-messages' style="margin-top: 0px;"></span>
                            <span id="fileNameMessage" class="ErrorMessage hide">Please enter report name</span>
                        </td>
                    </tr>
                    <tr>
                        <td><div class="bottom-margin30">Description</div></td>
                        <td>
                            <textarea id='file_description' class='form-control bottom-margin30' maxlength="1024"></textarea><span class="notification">
                                *1024 characters maximum
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td><div class="">RDL File<span class="Mandatory">*</span></div></td>
                        <td>
                            <iframe id="report_upload_iframe" style="height: 35px" src="@Url.Action("UploadReportView", "Reports")" scrolling="no" tabindex="-1"></iframe>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><span id="uploadValidation" class="ErrorMessage"></span></td>
                    </tr>
                </table>
                <div class="col-md-12 DisplayNone no-padding" id="datasource_list">
                    <h4>Select Data Source(s)</h4>
                    <table id="datasource_list_table"></table>
                </div>
            </div>
        </form>
        <div class='col-md-12 new-report-button-holder'>
            <div class='create-rdl-btns'>
                <input type='button' title="" value='Save' id='publish_report' onclick="addRDLReport()" class='btn btn-primary small-right-margin' disabled>
                <input type='button' title="" value='Cancel' class='btn btn-link NoStyleCloseClick' onclick="closeNewRDLAddPopup()">
            </div>
        </div>
    </div>
   
</body>
</html>