<div class="col-lg-12 no-padding" id="PopupContainer">
    <div class="col-md-12 header-menu header-pad-top header-menu-margin">
        <div class="col-xs-6 no-padding">
            <span class="su su-delete Head-icon"></span>
            <span class="PopupTitle">Delete Schedule</span>
        </div>
        <div class="col-xs-6 no-padding">
            <a href="javascript:void(0);" title="Close" class="PopupClose"><span id='deleteSchedulePopup' class="su su-close"></span></a>
        </div>
    </div>
    <div class="dialogBody col-xs-12 no-padding">
        <div class="col-xs-12">
            <div class="deleteItem">Are you sure you want to delete this schedule?</div>
        </div>
    </div>
    <div class="col-xs-12 dialogFooter rightAlign no-right-padding no-left-padding">
        <div class="col-xs-4"></div>
        <div class="col-xs-8 no-padding rightAlign validationArea">
            <input type="button" class="btn btn-danger rightAlign" value="Yes" id="delete_item" tabindex="1" autofocus />
            <input type="button" id="Cancel" class="btn btn-link rightAlign" value="No" onclick="deleteScheduleDialogClose()" tabindex="2" />
        </div>
        <div class="col-xs-8 no-padding centerAlign successArea" style="display:none">
            <input title="" type="button" id="Cancel" class="btn btn-default PopupClose" value="OK" onclick="deleteScheduleDialogClose()" tabindex="3" autofocus />
        </div>
    </div>
</div>