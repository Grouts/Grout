<div id="avatarUploadBox" title="Change Profile picture">
    <div id="PopupContainer" class="col-lg-12 no-padding">

        <div class="col-md-12 header-menu">
            <div class="col-xs-6 no-padding">
                <span class="su su-open Head-icon" style="padding-left:10px"></span>
                <span class="PopupTitle">Change Profile Picture</span>
            </div>
            <div class="col-xs-6 no-padding">
                <a href="javascript:void(0);" class="PopupClose" title="Close"><span class="su su-close"></span></a>
            </div>
        </div>

        <div class="row uploadBox dialogBody col-xs-12 no-padding">
            <div class="col-md-6 no-padding input-group imagepath">
                <input class="form-control" id="imagepath" disbaled="disabled" data-text="browse image path" value="" readonly="readonly" />
                <span id="upload-picture" class="input-group-addon">
                    
                </span>
            </div>

            <div class="image-selection-holder col-md-4">
                <div>
                    <div class="img-container">
                        <img id="profile-picture" style="background-repeat: no-repeat;" src="/Content/Images/Preview.jpg" />
                        <input type="hidden" name="LeftOfCropArea" value="" />
                        <input type="hidden" name="TopOfCropAea" value="" />
                        <input type="hidden" name="LeftToCropArea" value="" />
                        <input type="hidden" name="TopToCropArea" value="" />
                        <input type="hidden" name="height" value="" />
                        <input type="hidden" name="width" value="" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 no-padding" style="margin-left:21px; margin-top: -24%">
			    <div>
                    *Allowed file types are .png, .jpg, and .jpeg. Maximum file size is 30MB. Recommended resolution is 200x200 pixels.
                </div>
            </div>
        </div>

        <div class="col-xs-12 dialogFooter rightAlign no-right-padding no-left-padding">
            <div class="col-xs-4"></div>
            <div class="col-xs-8 no-padding rightAlign footermargin">
                <input type="button" value="Cancel" class="btn btn-link pull-right" id="cancelAvatarPopup">
                <input type="button" value="Save" class="btn btn-primary pull-right" id="uploadImage" disabled="disabled">
            </div>
        </div>

    </div>
</div>

<style>
    [contentEditable=false]:empty:not(:focus):before {
        content: attr(data-text);
    }
</style>

<script>
    $(document).ready(function () {
        $(document).on("click", ".PopupClose", function (e) {
            $("#profile-picture").attr("src", "/Content/Images/Preview.jpg");
            $('#uploadImage').attr("disabled", "disabled");
            if ($(".img-container").children().hasClass("jcrop-active")) {
                $('#profile-picture').data('Jcrop').destroy();
            }
            eDialog = $("#avatarUploadBox").data("ejDialog");
            eDialog.close();
        });
        
    });
</script>